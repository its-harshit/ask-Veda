{
  "name": "askveda",
  "version": "1.0.0",
  "description": "A modern chat UI app inspired by Perplexity",
  "main": "index.js",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "nodemon server/index.js",
    "server:prod": "node server/index.js",
    "client": "cd client && npm run dev",
    "build": "vite build",
    "preview": "vite preview",
    "install-all": "npm install && cd client && npm install"
  },
  "keywords": [
    "chat",
    "ui",
    "react",
    "mongodb",
    "perplexity"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.0.3",
    "multer": "^1.4.5-lts.1",
    "node-fetch": "^3.3.2",
    "socket.io": "^4.7.4"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "nodemon": "^3.0.2"
  }
}
